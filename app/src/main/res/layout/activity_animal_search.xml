<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AnimalSearchActivity"
    android:orientation="vertical"
    android:layout_margin="16dp">

    <TextView
        android:id="@+id/tvChooseSpecies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/searchChooseSpecies"
        android:layout_gravity="left"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        android:textColor="?colorPrimary" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rbtDogs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:onClick="radioButtonClicked"
            android:text="@string/rbtDogs"
            android:textSize="20sp"
            android:layout_margin="8dp" />

        <RadioButton
            android:id="@+id/rbtCats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="radioButtonClicked"
            android:text="@string/rbtCats"
            android:textSize="20sp"
            android:layout_margin="8dp" />

    </RadioGroup>
    <TextView
        android:id="@+id/tvChooseBreed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/searchChooseBreed"
        android:layout_gravity="left"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        android:textColor="?colorPrimary" />

    <Spinner
        android:id="@+id/spinnerBreed"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp" />
    <TextView
        android:id="@+id/tvChooseSex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/searchChooseSex"
        android:layout_gravity="left"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        android:textColor="?colorPrimary" />

    <Spinner
        android:id="@+id/spinnerSex"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp" />

    <TextView
        android:id="@+id/tvChooseLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/searchChooseLocation"
        android:layout_gravity="left"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        android:textColor="?colorPrimary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:layout_margin="8dp"
            android:layout_weight="1">

            <CheckBox
                android:id="@+id/checkBoxUS"
                android:layout_width="48dp"
                android:layout_height="24dp"
                android:layout_margin="8dp"
                android:checked="true" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/usa"
                android:layout_margin="8dp">

            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:layout_margin="8dp"
            android:layout_weight="1">

            <CheckBox
                android:id="@+id/checkboxCanada"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:checked="true" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/canada"
                android:layout_margin="8dp">

            </ImageView>
        </LinearLayout>
    </LinearLayout>

    <Spinner
        android:id="@+id/spinnerState"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/searchAnimals"
        android:layout_gravity="right"
        android:layout_margin="16dp" />

</LinearLayout>